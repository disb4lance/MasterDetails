<Window x:Class="Client.WindowsForAddSpecification.AddSpecificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить Спецификацию" Height="300" Width="400">
    <StackPanel Margin="10">
        <StackPanel>
            <TextBlock Text="ID документа" Margin="0,0,0,5" />
            <TextBox x:Name="DocumentIdTextBox" />
        </StackPanel>
        <StackPanel>
            <TextBlock Text="Наименование спецификации" Margin="0,0,0,5" />
            <TextBox x:Name="SpecificationNameTextBox" />
        </StackPanel>
        <StackPanel>
            <TextBlock Text="Стоимость спецификации" Margin="0,0,0,5" />
            <TextBox x:Name="SpecificationCostTextBox" />
        </StackPanel>
        <Button Content="Добавить" Click="AddButton_Click" />
    </StackPanel>
</Window>
