<Window x:Class="Client.WindowsForShowDocument.ShowDocumentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Введите номер документа" Height="200" Width="300">
    <Grid Margin="20">
        <StackPanel>
            <TextBox Name="DocumentNumberTextBox" 
         Width="200" 
         Margin="0,0,0,10"
         GotFocus="DocumentNumberTextBox_GotFocus" 
         LostFocus="DocumentNumberTextBox_LostFocus"
         Text="Введите номер документа" />
            <Button Content="Показать документ" 
                    Click="ShowDocument_Click" 
                    Width="200" />
        </StackPanel>
    </Grid>
</Window>
