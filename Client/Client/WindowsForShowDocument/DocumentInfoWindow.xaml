<Window x:Class="Client.WindowsForShowDocument.DocumentInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Информация о документе" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="{Binding Number}" FontSize="20" FontWeight="Bold" />
            <TextBlock Text="{Binding Date}" FontSize="16" />
            <TextBlock Text="{Binding SumPrices}" FontSize="16" />
            <TextBlock Text="{Binding note}" FontSize="16" />
        </StackPanel>
    </Grid>
</Window>
