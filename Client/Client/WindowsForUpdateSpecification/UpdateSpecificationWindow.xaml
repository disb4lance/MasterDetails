<Window x:Class="Client.WindowsForUpdateSpecification.UpdateSpecificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Обновить Спецификацию" Height="300" Width="400">
    <StackPanel Margin="10">
        <StackPanel>
            <TextBlock Text="ID документа" Margin="0,0,0,5" />
            <TextBox x:Name="DocumentIdTextBox" />
        </StackPanel>
        <StackPanel>
            <TextBlock Text="ID спецификации" Margin="0,0,0,5" />
            <TextBox x:Name="SpecificationIdTextBox" />
        </StackPanel>
        <StackPanel>
            <TextBlock Text="Новое наименование спецификации" Margin="0,0,0,5" />
            <TextBox x:Name="NewSpecificationNameTextBox" />
        </StackPanel>
        <StackPanel>
            <TextBlock Text="Новая стоимость спецификации" Margin="0,0,0,5" />
            <TextBox x:Name="NewSpecificationCostTextBox" />
        </StackPanel>
        <Button Content="Обновить" Click="UpdateButton_Click" />
    </StackPanel>
</Window>
