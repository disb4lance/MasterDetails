<Window x:Class="Client.WindowsForShowSpecifications.ShowSpecificationsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Show Specifications" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Введите ID документа для показа спецификаций" Margin="0,0,0,5"/>
            <TextBox Name="DocumentIdTextBox" VerticalAlignment="Top" Margin="0,0,0,10"/>

            <Button Content="Показать" HorizontalAlignment="Right" Width="100" Click="ShowButton_Click"/>

            <TextBlock Text="Спецификации:" FontWeight="Bold" Margin="0,10,0,5"/>
            <ListBox Name="SpecificationsListBox"/>
        </StackPanel>
    </Grid>
</Window>
