<Window x:Class="Client.WindowsForAddDocuments.AddDocumentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Document" Height="200" Width="300">
    <Grid>
        <StackPanel>
            <TextBox Name="DocumentNumberTextBox"
                     Text="Введите номер документа"
                     Foreground="Gray"
                     GotFocus="RemovePlaceholder"
                     LostFocus="AddPlaceholder"
                     Margin="10"/>

            <TextBox Name="NoteTextBox"
                     Text="Введите примечание"
                     Foreground="Gray"
                     GotFocus="RemovePlaceholderNote"
                     LostFocus="AddPlaceholderNote"
                     Margin="10"/>

            <Button Name="SubmitButton" Content="Добавить документ" Click="SubmitButton_Click" Margin="10"/>
            <TextBlock Name="ResultTextBlock" Text="" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
